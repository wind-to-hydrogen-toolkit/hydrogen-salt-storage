{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "nbconvert",
            "type": "shell",
            "command": "source .venv/bin/activate && ./convert-notebooks.sh",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "docs",
            "type": "shell",
            "command": "source .venv/bin/activate && cd docs && make html",
            "problemMatcher": [],
            "group": {
                "kind": "test"
            }
        },
        {
            "label": "docs-clean",
            "type": "shell",
            "command": "source .venv/bin/activate && cd docs && make clean html",
            "problemMatcher": [],
            "group": {
                "kind": "test"
            }
        },
        {
            "label": "format-py",
            "type": "shell",
            "command": "source .venv/bin/activate && black -l 79 **/*.py && isort **/*.py",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}
