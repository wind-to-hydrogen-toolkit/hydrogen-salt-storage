{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "convert-notebooks",
            "type": "shell",
            "command": "source .venv/bin/activate && jupyter nbconvert --to script docs/notebooks/*.ipynb && rm -rf scripts/* && mv docs/notebooks/*.py scripts",
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "docs",
            "type": "shell",
            "command": "source .venv/bin/activate && cd docs && make html",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "docs-clean",
            "type": "shell",
            "command": "source .venv/bin/activate && cd docs && make clean html",
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "black-isort",
            "type": "shell",
            "command": "source .venv/bin/activate && black **/*.py docs/notebooks/*.ipynb && isort **/*.py",
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "sanitise-notebooks",
            "type": "shell",
            "command": "source .venv/bin/activate && jupyter nbconvert --sanitize-html --to notebook --inplace docs/notebooks/*.ipynb",
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "pytest",
            "type": "shell",
            "command": "source .venv/bin/activate && python -m pytest --cov",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "pylint-scripts",
            "type": "shell",
            "command": "source .venv/bin/activate && pylint h2ss/*.py tests/*.py",
            "problemMatcher": [],
            "group": {
                "kind": "test"
            }
        },
        {
            "label": "pylint-notebooks",
            "type": "shell",
            "command": "source .venv/bin/activate && pylint scripts/*.py --output data/pylint-notebooks.txt",
            "problemMatcher": [],
            "group": {
                "kind": "test"
            }
        },
        {
            "label": "flake8",
            "type": "shell",
            "command": "source .venv/bin/activate && flake8 **/*.py",
            "problemMatcher": [],
            "group": {
                "kind": "test"
            }
        },
        {
            "label": "prune-remote",
            "type": "shell",
            "command": "git fetch --prune",
            "problemMatcher": []
        },
        {
            "label": "prune-local",
            "type": "shell",
            "command": "git prune --verbose",
            "problemMatcher": []
        }
    ]
}
